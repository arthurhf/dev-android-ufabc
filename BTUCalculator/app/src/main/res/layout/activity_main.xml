<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <SeekBar
            android:layout_width="203dp"
            android:layout_height="19dp"
            android:id="@+id/seekBarArea" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp"
            app:layout_constraintTop_toTopOf="@+id/textView"/>
    <SeekBar
            android:layout_width="203dp"
            android:layout_height="19dp"
            android:id="@+id/seekBarPessoas"
            app:layout_constraintEnd_toEndOf="@+id/seekBarArea"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/seekBarArea" android:layout_marginTop="44dp"/>
    <TextView
            android:text="Área (m²)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/nIncideLuz"/>
    <TextView
            android:text="Pessoas no ambiente"
            android:layout_width="79dp"
            android:layout_height="38dp"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="36dp"/>
    <CheckBox
            android:text="Incide Luz Solar direta"
            android:layout_width="226dp"
            android:layout_height="31dp"
            android:id="@+id/incideLuz" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="92dp" android:layout_marginStart="92dp"/>
    <CheckBox
            android:text="Não Incide Luz Solar direta"
            android:layout_width="214dp"
            android:layout_height="32dp"
            android:id="@+id/nIncideLuz" app:layout_constraintStart_toStartOf="@+id/incideLuz"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/incideLuz"
    />
    <TextView
            android:text="Calculadora de BTU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="144dp" android:layout_marginStart="144dp"/>
    <TextView
            android:text="Total de BTU's = "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="144dp"
            android:layout_marginStart="144dp" android:layout_marginBottom="208dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>